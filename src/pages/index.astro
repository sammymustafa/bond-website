  <!-- Steps Widget ****************** -->

  <Steps
    title="Step-by-step walkthrough of Bond's service"
    id="walkthrough"
    tagline="How Bond Works"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Patient provides consent</span>',
        description:
          "Using our patient-interface, patients first have to provide us with consent to access your electronic health record associated with your hospital system.",
        icon: 'tabler:license',
      },
      {
        title: 'Step 2: <span class="font-medium">Data Informatics Team Works with EHR</span>',
